<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="../public/css/criar_projetos.css">
        <link rel="stylesheet" href="../public/css/footer.css">
        <script src="../../public/js/url.js"></script>
        <title>Editar projetos</title>
    </head>
    <body>
        
    <!-- Incluir a nav-bar atráves da função include do ejs -->
    <%- include('../nav'); -%>

        <div class="box">
            <h1>Sonhos a serem construidos</h1>
        </div>

        <div class="divtotal">
            <div id="divimagem">
                <label class="picture" for="picture_input" tabIndex="0">
                    <span class="picture_image"></span>
                  </label>
                  <input type="file" name="picture_input" id="picture_input">
            </div>
            <div class="linha-grande"></div>

            <div class="divlogin">
                <div class="login">
                    
                    <div class="input-out">
                        <div class="inputs">

                            <form method="post" action="/servico/editarServico">

                                <input type="hidden" name="id_administrador" value="<%=id%>">
                                <input type="hidden" name="id_servico" value="<%=obra.id_servico%>">
                                <!--NOME-->
                                <div class="divNome">
                                    <label id="servico_nome" for="">Nome:</label>
                                    <br>
                                    <input class="inputNome" name="nome" type="text" value="<%=obra.nome%>" /><br>
                                </div>
                                
                                <!--LOGRADOURO-->
                                <div class="endereco">
                                    <div class="divlogradouro">
                                        <label id="logradouro" for="">Logradouro:</label>
                                        <input class="input" type="text" value="<%=obra.logradouro%>" />
                                    </div>

                                    <div class="divNum">
                                        <label id="num" for="">Numero:</label>
                                        <input class="input" name="numero" type="text" value="<%=obra.numero%>" /><br>
                                    </div>
                                
                                <!--BAIRRO-->
                                    <div class="divBEC">
                                        <label id="bairroinput" for="">Bairro:</label>
                                        <input class=" input" type="text" value="<%=obra.bairro%>" />
                                        <br>
                                    </div><br>
                                </div>
                                
                                <!--DATA INICIO / DATA ENTREGA-->
                                <div class="divDatas">
                                    <div class="divdataIn">
                                        <label class="datainit" id="data_inicio" for="">Data inicio:</label>
                                        <input class="input" name="data_abertura" type="text" value="<%=obra.data_abertura%>" /><br>
                                    </div>
                                    <div class="divdataFim">
                                        <label id="data_fim" for="">Data entrega:</label>
                                        <input class="input" name="data_finadlizacao" type="text" value="<%=obra.data_finadlizacao%>" /><br>
                                    </div>
                                </div>

                                <!-- DESCRIÇÃO -->
                                <div class="divDescricao">
                                    <label for="">Descrição:</label>
                                    <textarea  maxlength="480" name="descricao" id="descricao" cols="30" rows="10"> <%=obra.descricao%> </textarea>
                                </div>
                                <button class="buttonContinuar">Salvar Atualizações</button>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        

        <!-- Incluir o footer atráves da função include do ejs -->
    <%- include('../footer'); -%>


    </body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="../../public/js/url.js"></script>
    <script src="../projeto_frontend/js/script.js"></script>
    <script src="../projeto_frontend/js/scriptAdm.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</html>